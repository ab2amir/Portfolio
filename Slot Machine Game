import numpy
import pygame


# Class for location of icons
class IconLocation(pygame.sprite.Sprite):
    def __init__(self, pos_x, pos_y):
        super().__init__()
        self.image = pygame.image.load('Assets/youtube.png')
        self.rect = self.image.get_rect()
        self.rect.x = pos_x
        self.rect.y = pos_y
    def set_image(self, image):
        self.image = image


def start():
    global total_coins
    # Generate three Random icons
    rand_icons = numpy.random.choice(icons, 3, p=icons_proba)
    # Draw the random icons on the correct location
    loc_left.set_image(icon_dict[rand_icons[0]])
    loc_middle.set_image(icon_dict[rand_icons[1]])
    loc_right.set_image(icon_dict[rand_icons[2]])

    # Reward if there are Three identical icons
    if rand_icons[0] == rand_icons[1] == rand_icons[2]:
        # Get reward from a dict
        coins = icon_reward_dict[rand_icons[0]]
        total_coins += coins


# Setup the window
pygame.init()
width = 700
height = 550
screen = pygame.display.set_mode((width, height))
pygame.display.set_caption("Slot Machine @Ab Amir TV")
white = [255, 255, 255]
screen.fill(white)

# Load background image
background = pygame.image.load('Assets/Slot-Machine.png')
police_total_coins = pygame.font.SysFont("Comic Sans MS", 50)

# Coins of the player
total_coins = 500


# Dict for every icon associate to an image
icon_dict = {
    "Facebook": pygame.image.load('Assets/facebook.png'),
    "Instagram": pygame.image.load('Assets/instagram.png'),
    "Twitter": pygame.image.load('Assets/twitter.png'),
    "LinkedIn": pygame.image.load('Assets/linkedin.png'),
    "Youtube": pygame.image.load('Assets/youtube.png')
}


# Load location icons
# No equation to do location just try and adjust
height_location = height / 2 - 13
Locations = pygame.sprite.Group()
loc_left = IconLocation(102, height_location)
loc_middle = IconLocation(192, height_location)
loc_right = IconLocation(282, height_location)

# Group locations
Locations.add(loc_left)
Locations.add(loc_middle)
Locations.add(loc_right)

# Stock the social media icons in list
# Youtube = Jackpot +200 coins
icons = ["Facebook", "Instagram", "Twitter", "LinkedIn", "Youtube"]
# Probability of every icon to appear
icons_proba = [0.2, 0.25, 0.35, 0.15, 0.05]

# Stock on dict every icon with that raward
icon_reward_dict = {
    "Facebook": 20,
    "Instagram": 15,
    "Twitter": 10,
    "LinkedIn": 20,
    "Youtube": 200
}

run = True
while run:
    screen.fill(white)
    # Make the background iamge
    screen.blit(background, (0, 0))
    # Print the coins of the player
    text = police_total_coins.render("Total "+str(total_coins)+"$", True, (0, 0, 0))
    screen.blit(text, (400, 0))
    # Draw icon image
    Locations.draw(screen)
    # Update screen
    pygame.display.flip()
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False
            quit()
        # check if key is pressed
        if event.type == pygame.KEYDOWN:
            # 1 click = 1 try = -15$
            if total_coins >= 15:
                total_coins -= 15
                start()








